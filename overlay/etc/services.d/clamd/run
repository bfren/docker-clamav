#!/usr/bin/with-contenv sh

set -euo pipefail
export BCG_E="clamav/$(basename ${0})"


#======================================================================================================================
# Run clamav in daemon mode.
#
# Clamd flags
#   -c  use specified configuration file
#======================================================================================================================

bcg-echo "Starting ClamAV daemon."
clamd -c ${CLAMAV_CLAMD_CONF}
