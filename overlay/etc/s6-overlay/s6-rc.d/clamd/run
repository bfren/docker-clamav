#!/bin/withenv sh

set -euo pipefail


#======================================================================================================================
# Run preflight checks
#======================================================================================================================

nu -c "use bf-clamav run ; run preflight"



#======================================================================================================================
# Start ClamAV daemon
#
# Flags:
#   -c  use specified configuration file
#======================================================================================================================

clamd -c ${BF_CLAMAV_CLAMD_CONF}
