#!/bin/sh

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Get ClamAV Version.
#======================================================================================================================

cd /tmp

VERSION=$(cat VERSION)
bcg-debug "ClamAV version ${VERSION}."


#======================================================================================================================
# Install ClamAV and dependencies.
#======================================================================================================================

bcg-echo "Installing ClamAV v${VERSION}..."
apk add --no-cache \
    clamav-daemon=${VERSION} \
    clamav-libunrar=${VERSION}
bcg-done


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bcg-debug "Cleaning up default ClamAV configuration."
rm -rf /etc/clamav/*
