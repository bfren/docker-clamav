#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Get ClamAV Version.
#======================================================================================================================

cd /tmp

VERSION=$(cat VERSION)
bcg-debug "install" "ClamAV version ${VERSION}."


#======================================================================================================================
# Install ClamAV and dependencies.
#======================================================================================================================

bcg-echo "Installing ClamAV v${VERSION}..."
apk add --no-cache \
    clamav-daemon=${VERSION} \
    clamav-libunrar=${VERSION}
bcg-done
