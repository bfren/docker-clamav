#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Get ClamAV Version.
#======================================================================================================================

cd /tmp

VERSION=$(cat VERSION)
bf-debug "ClamAV version ${VERSION}."


#======================================================================================================================
# Install ClamAV and dependencies.
#======================================================================================================================

bf-echo "Installing ClamAV v${VERSION}..."
apk add --no-cache \
    clamav-daemon=${VERSION} \
    clamav-libunrar=${VERSION}
bf-done


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bf-debug "Cleaning up default ClamAV configuration."
rm -rf /etc/clamav/*
